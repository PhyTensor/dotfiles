{
    "layer": "bottom",
    "position": "top",
    "spacing": 0, // gaps between modules
    "mode": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "modules-left": [
        //"custom/power",
        "clock",
        "hyprland/language",
        //"idle_inhibitor",
        "custom/weather",
        "custom/power_profile",
        "custom/updater",
        "custom/spotify"
    ],
    "modules-center": [
        "hyprland/workspaces"
        //"hyprland/window"
    ],
    "modules-right": [
        "network",
        "bluetooth",
        "cpu",
        "disk",
        "disk#home",
        "memory",
        "backlight",
        "pulseaudio",
        "pulseaudio#microphone",
        "temperature",
        "tray",
        "battery",
        "custom/battery-notification"
    ],

    "hyprland/window": {
        "format": "{}",
        "max-length": 60,
        "separate-outputs": false
    },

    "hyprland/workspaces": {
         "disable-scroll": true,
         "all-outputs": true,
         "warp-on-scroll": false,
         "format": "{name}: {icon}",
         "on-scroll-up": "hyprctl dispatch workspace e-1",
         "on-scroll-down": "hyprctl dispatch workspace e+1",
        "format-icons": {
              "1": "ÔÑ†",
              "2": "Ôâ®",
              "3": "ÔÑ°",
              "4": "ÔÜº",
              "5": "ÔÅµ",
              "9": "ÔÜº",
             "urgent": "ÔÅ™",
             "active": "ÔÜí",
             "default": "ÔÑë"
         }
     },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },

    "custom/power_profile":{
        //shows the current power profile and switches to next on click
        "exec": "asusctl profile -p | sed s:'Active profile is'::",
        "interval": 30,
        "format": "Û∞àê {}",
        "on-click": "asusctl profile -n; pkill -SIGRTMIN+8 waybar",
        "signal": 8
    },

    "hyprland/language": {
        "format": "{}",
        "format-uk": "UA",
        "format-en": "US",
        "format-gr": "GR",
        "format-sw": "SW",
        "format-ki": "KI",
        "format-ru": "RU",
        "min-length": 1,
        "tooltip": true
    },

    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "ÔÑú {name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },

    "cpu": {
        "interval": 1,
        "format": "Ôãõ {usage}%",
        "tooltip": true,
        "on-click": "foot -e htop"
    },

    "memory": {
        "interval": 5,
        "format": "ÔÉâ {: >3}% ",
        "on-click": "foot -e htop"
    },

    "disk": {
        "interval": 30,
        "format": "/ {percentage_used}%",
        "path": "/"
    },

    "disk#home": {
        "interval": 60,
        "format": "üè† {percentage_used}%",
        "path": "/home"
    },

    "tray": {
        "icon-size": 18,
        "spacing": 8
    },

    "clock": {
        "timezone": "Africa/Nairobi",
        "interval": 1,
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%H:%M:%S}",
        //"format": "{:ÔÄó %I:%M %p  ÔÅ≥ %a, %b %e}",
         //"format-alt": "{:%Y-%m-%d}",
        //"format": "ÔÑ≥ {:%a %d %b ÔÄó %I:%M %p}",	//12 hour format
        // "format": "ÔÑ≥ {:%a %d %b ÔÄó %H:%M}",	//24 hour format
        //"format-alt": "ÔÑ≥ {:%d/%m/%Y ÔÄó %H:%M:%S}",
        "format-alt": "ÔÑ≥ {:%a %d %b ÔÄó %H:%M:%S}",
        "tooltip": true
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": ["Û∞Éû", "Û∞Éü", "Û∞É†"],
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-",
        "min-length": 6
    },

    "battery": {
        "states": {
            "good": 89,
            "beware": 30,
            "warning": 21,
            "critical": 16
        },
        "interval": 6,
        "format": "{icon} {capacity}%",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"]
    },

    "custom/battery-notification": {
        "exec": "~/.config/waybar/scripts/battery_notification.sh",
        "interval": 5
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": true,
        "format-muted": "ÔÄ¶ ",
        "on-click": "pamixer -t",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "nospacing": 1,
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        }
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ± ",
        "on-click": "pamixer --default-source -t",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "scroll-step": 5
    },

    "temperature": {
        "interval": 2,
        //"thermal-zone": 1,
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        //"format": "{temperatureC}¬∞C {icon} Ôãâ",
        "format": "{temperatureC}¬∞C {icon}",
        "critical-threshold": 72,
        //"format-critical": "{temperatureC}¬∞C Ôãá",
        "format-critical": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },

    "network": {
        "format": "{ifname}",
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-ethernet": "Û∞àÄ ",
        //"format-wifi": "Ôá´ ",
        "format-wifi": "{icon}",
        //"format-ethernet": "Û∞àÄ {ipaddr}/{cidr}",
        "tooltip-format": "Ôûñ {ifname} via {gwaddri}",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) - {ifname} via {gwaddr}",
        "tooltip-format-ethernet": "ÔÉÅ  {ifname} ({ipaddr}/{cidr})",
        //"format-disconnected": "Disconnected ‚ö†",
        "format-disconnected": "Û∞§≠ ‚ö†",
        "format-icons": ["Û∞§Ø ","Û∞§ü ","Û∞§¢ ","Û∞§• ","Û∞§® "],
        "format-linked": "{ifname} (No IP)",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "nospacing": 1
    },

    "bluetooth": {
	    "format": "Ôäî {status}",
	    "format-disabled": "", // an empty format will hide the module
	    "format-connected": "Ôäî {num_connections}",
	    "tooltip-format": "{device_alias}",
	    "tooltip-format-connected": "Ôäî {device_enumerate}",
	    "tooltip-format-enumerate-connected": "{device_alias}"
    },

    "custom/spotify": {
        "exec": "/usr/bin/python3 /home/karoki/.config/waybar/scripts/mediaplayer.py --player spotify",
        "format": "{}  ÔÜº",
        "return-type": "json",
        "on-click": "playerctl -p spotify play-pause",
        "on-scroll-up": "playerctl next",
        "on-scroll-down": "playerctl previous",
        "max-length": 32,
    },

    "custom/power": {
        "format" : "‚èª {}",
        //"exec": "~/.config/waybar/scripts/power_menu.sh",
        //"interval": 30,
		"tooltip": false,
        //"on-click": "bash ~/.config/waybar/scripts/power_menu.sh toggle",
        "on-click": "~/.config/waybar/scripts/power_menu.sh",
        //"return-type": "json",
		//"menu": "on-click",
		// "menu-file": "$HOME/.config/waybar/scripts/power_menu.xml", // Menu file in resources folder
		//"menu-actions": {
		//	"shutdown": "shutdown",
		//	"reboot": "reboot",
		//	"suspend": "systemctl suspend",
		//	"hibernate": "systemctl hibernate"
		//}
    },

    "custom/updater":{
        "format": "ÔÅ± {}",
        "exec": "pacman -Qu | wc -l",
        "exec-if": "[[ $(pacman -Qu | wc -l) != 0 ]]",
        "interval": 15,
        "on-click": "~/.config/waybar/scripts/updater.sh"
    },

    "custom/weather": {
        "format": "{}",
        "exec": "curl 'wttr.in/Nairobi?format=1",
        "interval": 1800,
        //"on-click": "firefox 'https://www.meteoblue.com/en/weather/week/ljubljana_slovenia_3196359'"
        "on-click": "firefox 'https://www.meteoblue.com/en/weather/week/nairobi_kenya_184745'"
    }
}
